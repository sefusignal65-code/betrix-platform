{
  "name": "betrix-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "BETRIX betting platform frontend",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "test:coverage": "vitest run --coverage",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "analyze": "vite build --mode analyze",
    "preview:prod": "vite preview --host",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test",
    "analyze:bundle": "ANALYZE=true npm run build",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org $SENTRY_ORG --project $SENTRY_PROJECT ./dist && sentry-cli sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT ./dist",
    "monitor:bundle": "node scripts/monitor-bundle-size.js"
  },
  "keywords": [
    "betting",
    "sports",
    "affiliate"
  ],
  "author": "You",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "axios": "^1.5.1",
    "react": "~18.3.1",
    "react-dom": "~18.3.1",
    "react-router-dom": "^6.17.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.21.1",
    "@eslint/object-schema": "^2.1.7",
    "@playwright/test": "^1.56.1",
    "@sentry/vite-plugin": "^4.5.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/gtag.js": "^0.0.20",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "terser": "^5.22.0",
    "typescript": "^5.0.4",
    "vite": "^7.1.12",
    "vitest": "^1.6.1"
  }
}
